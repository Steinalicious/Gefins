<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:gravity="center|center_vertical"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:id="@+id/viewad_plain"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="200dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/earth" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_category"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/viewad_category"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_container"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:gravity="center_vertical"
                android:textSize="14sp" />

            <View
                android:id="@+id/divider30"
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/item_zip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/viewad_zip"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zip_container"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:gravity="center_vertical"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider28"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ad_name_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_container"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider25"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/enter_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="36dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/number_queue"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/title_input"
                android:text="@string/viewad_numberqueue"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/number_queue_container"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider23"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="25dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ownerinfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/viewad_ownerinfo"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewad_owner"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/owner_container"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userStars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewad_stars"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/star1"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>