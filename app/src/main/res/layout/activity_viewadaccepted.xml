<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:gravity="center|center_vertical"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:id="@+id/viewad_accepted"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/earth" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_category"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/viewad_category"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_container"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:gravity="center_vertical"
                android:textSize="14sp" />

            <View
                android:id="@+id/divider30"
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/item_zip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/viewad_zip"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zip_container"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:gravity="center_vertical"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider28"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ad_name_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider25"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/message_title"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider27"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="150dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/message_window"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="16sp"
                android:textStyle="bold" />
        </ScrollView>


        <EditText
            android:id="@+id/message_editor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textShortMessage"
            android:hint="@string/send_message"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp"
            tools:ignore="Autofill"/>

        <View
            android:id="@+id/divider26"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="25dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ownerinfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/viewad_ownerinfo"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewad_owner"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/owner_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userStars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewad_stars"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/userStars_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/owner_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewad_address"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/owner_address_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/owner_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewad_phone"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/owner_phone_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/owner_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewad_email"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/owner_email_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_queue"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="@string/viewad_cancel"
            android:textSize="12sp" />

        <Button
            android:id="@+id/send_message"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="@string/viewad_message"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>